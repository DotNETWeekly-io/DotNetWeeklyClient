<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DotNetWeeklyClient.EpisodePage"
             Title="EpisodePage">
    <Grid Padding="5">
        <WebView>
            <WebView.Source>
                <HtmlWebViewSource Html="{Binding EpisodeContent}"/>
            </WebView.Source>
        </WebView>
    </Grid>
</ContentPage>